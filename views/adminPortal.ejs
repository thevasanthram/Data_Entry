          }
        } else {
          if(document.getElementById('rootPassword').value == document.getElementById('confirmPassword').value){
            createCompany()
          }else{
            // display passwords do not match
            console.log('passwords are not matching')
          }
        }
      }

      async function createCompany(){
        const companyName = document.getElementById('companyName').value
        const rootUserName = document.getElementById('rootUserName').value
        const rootPassword = document.getElementById('rootPassword').value
        
        const response = await fetch('/createCompany',{
          method: 'POST',
          headers: {
            'Content-type': 'application/json'
          },
          body: JSON.stringify({
            companyName: companyName,
            rootUserName: rootUserName,
            rootUserPassword: rootPassword
          })
        })

        if(response.status == 200){
          document.getElementById('createCompanySuccessMessage').innerHTML = 'Company created!'
          document.getElementById('createCompanySuccessDivision').style.visibility = 'visible'
        }else{
          document.getElementById('createCompanySuccessMessage').innerHTML = 'Error creating company. Try Again!'
          document.getElementById('createCompanySuccessDivision').style.visibility = 'visible'
        }
      }
    </script>
  </body>
</html>
