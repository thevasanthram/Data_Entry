<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./follower.css" />
    <title>Data Entry System</title>
  </head>
  <body>
    <div>
      <div class="nav-bar">
        <div class="user-mode">
          <div class="button-logout-content">
            <form action="/logout" method="get">
              <button type="submit" class="button-logout">Log-out</button>
            </form>
          </div>
          <div id="user-mode-name">
            <p><%= username %></p>
          </div>
        </div>
        <div class="app-name-div">
          <h2 id="app-name">Data Entry System</h2>
        </div>
      </div>
      <div class="form-content">
        <form action="/firstlayer" method="post" id="bodyNumberForm">
          <label for="bodyNumber" id="bodyNumber">Enter Body Number :</label>
          <input
            type="number"
            name="bodyNumber"
            maxlength="4"
            required
            min="1"
          />
          <button id="body-number-submit-button" type="submit">Enter</button>
          <button
            id="body-number-submit-button"
            type="button"
            onclick="passCar()"
          >
            Pass
          </button>
        </form>
      </div>
    </div>

    <script>
      function passCar() {
        var bodyNumber = document.getElementsByName('bodyNumber').value;
        if (confirm('Are you sure want to Pass the Car ?') == true) {
          document.getElementById('bodyNumberForm').reset();
        }
      }
    </script>
  </body>
</html>
