<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./follower.css" />
    <title>Data Entry System</title>
  </head>
  <body>
    <div>
      <div class="nav-bar">
        <div class="user-mode">
          <div class="button-logout-content">
            <form action="/logout" method="get">
              <button type="submit" class="button-logout">Log-out</button>
            </form>
          </div>
          <div id="user-mode-name">
            <p><%= username %></p>
          </div>
        </div>
        <div class="app-name-div">
          <h2 id="app-name">Data Entry System</h2>
        </div>
      </div>
      <div class="form-content">
        <form action="/firstlayer" method="post" id="bodyNumberForm">
          <label for="bodyNumber" id="bodyNumber">Enter Body Number :</label>
          <input
            type="number"
            name="bodyNumber"
            id="bodyNumberfield"
            maxlength="4"
            required
            min="1"
            autofocus
          />
          <input
            type="hidden"
            name="bodyNumberStatus"
            value=""
            id="bodyNumberStatus"
          />
          <button
            id="body-number-submit-button"
            type="button"
            onclick="submitBodyNumber()"
          >
            Enter
          </button>
          <button
            id="body-number-submit-button"
            type="button"
            onclick="passCar()"
          >
            Pass
          </button>
        </form>
      </div>
    </div>
    <div id="message-content">
      <span id="message"></span>
    </div>

    <script>
      var bodyNumberRecords;

      function submitBodyNumber() {
        var BodyNumberform = document.getElementById('bodyNumberForm');

        fetch('http://localhost:8000/bodyNumber', {
          method: 'POST',
          headers: {
            'Content-type': 'application/json',
          },
          body: JSON.stringify({
            enteredBodyNumberValue:
              document.getElementById('bodyNumberfield').value,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            bodyNumberRecords = data;

            if (data.data.length == 0) {
              document.getElementById('bodyNumberStatus').value =
                'newBodyNumber';
              BodyNumberform.submit();
            } else {
              if (data.data[0].status == 'No Defect') {
                document.getElementById('message').innerHTML =
                  'Car already passed today';
                setTimeout(() => {
                  document.getElementById('message').innerHTML = '';
                }, 4000);
              } else {
                document.getElementById('bodyNumberStatus').value =
                  'existingBodyNumber';
                BodyNumberform.submit();
              }
            }
          })
          .catch((err) => {
            console.log(err);
          });
      }

      function passCar() {
        var BodyNumberform = document.getElementById('bodyNumberForm');

        fetch('http://localhost:8000/bodyNumber', {
          method: 'POST',
          headers: {
            'Content-type': 'application/json',
          },
          body: JSON.stringify({
            enteredBodyNumberValue:
              document.getElementById('bodyNumberfield').value,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            console.log(data.data);
            if (data.data.length == 0) {
              if (confirm('Are you sure want to Pass the Car ?') == true) {
                document.getElementById('bodyNumberStatus').value =
                  'newBodyNumber';
                handlePassCarSave();
              }
            } else {
              if (data.data[0].status == 'No Defect') {
                document.getElementById('message').innerHTML =
                  'Car already passed today';
                setTimeout(() => {
                  document.getElementById('message').innerHTML = '';
                }, 4000);
              } else {
                document.getElementById('message').innerHTML =
                  'Car has defects today';
                setTimeout(() => {
                  document.getElementById('message').innerHTML = '';
                }, 4000);
              }
            }
          })
          .catch((err) => {
            console.log(err);
          });
      }

      function handlePassCarSave() {
        var bodyNumberValue = document.getElementById('bodyNumberfield').value;
        var bodyNumberStatus =
          document.getElementById('bodyNumberStatus').value;

        fetch('http://localhost:8000/passcar', {
          method: 'POST',
          headers: {
            'Content-type': 'application/json',
          },
          body: JSON.stringify({
            bodyNumber: bodyNumberValue,
            bodyNumberStatus: bodyNumberStatus,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            console.log(data.status == 'success');
            alert('Car Passed with no defects');
            document.getElementById('bodyNumberForm').reset();
          })
          .catch((error) => {
            console.log(error);
          });
      }
    </script>
  </body>
</html>
