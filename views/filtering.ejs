        var toDate = document.getElementById('to-date-condition-input').value
        console.log('pareto');

        const response = await fetch('http://localhost:8000/pareto',{
          method: 'POST',
          headers:{
            'Content-type': 'application/json',
          },
          body: JSON.stringify({
            fromDate,
            toDate,
          })
        })
        const data = await response.json()

        console.log('data', data.data)

        let bodyNumberCountProvider = JSON.parse(JSON.stringify(data.data))
        let categoryCountProvider= JSON.parse(JSON.stringify(data.data))
        let defectCountProvider = JSON.parse(JSON.stringify(data.data))

        // counting no of defects in each bodyNumber, category, defect
        Object.keys(bodyNumberCountProvider).map ( (category) => {
          if(isNaN(categoryCountProvider[category])){
            categoryCountProvider[category] = 0
          }
          let categoryCountManager = 0;
          Object.keys(bodyNumberCountProvider[category]).map( (defect) => {
            if(isNaN(defectCountProvider[category][defect])){
              defectCountProvider[category][defect] = 0;
            }
            let defectCountManager = 0;
            Object.keys(bodyNumberCountProvider[category][defect]).map( (subDefect) => {
              Object.keys(bodyNumberCountProvider[category][defect][subDefect]).map( (bodyNumber) => {
                bodyNumberCountProvider[category][defect][subDefect][bodyNumber] = bodyNumberCountProvider[category][defect][subDefect][bodyNumber].length
                defectCountManager += bodyNumberCountProvider[category][defect][subDefect][bodyNumber]
              })
            })
            defectCountProvider[category][defect] += defectCountManager;
            categoryCountManager += defectCountManager;
            defectCountManager = 0;
          })
          categoryCountProvider[category] += categoryCountManager;
          categoryCountManager = 0;
        })

        // console.log('bodyNumberCountProvider: ',bodyNumberCountProvider)
        console.log('categoryCountProvider: ',categoryCountProvider)
        console.log('defectCountProvider:' ,defectCountProvider)

        const sortedCategoryCountProvider = Object.entries(categoryCountProvider)
          .sort(([, a], [, b]) => b - a)
          .reduce(
            (r, [k, v]) => ({
              ...r,
              [k]: v
            }),
            {}
          )
        
        // console.log('sort: ', sortedCategoryCountProvider)

