<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./firstLayer.css" />
    <title>Data Entry System</title>
    <link
      href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div>
      <div class="header">
        <div style="display: flex; align-items: center; padding: 1%">
          <img
            src="./home.png"
            title="Home"
            style="
              margin-left: 2%;
              width: 4%;
              margin-right: 1%;
              min-height: 3%;
              position: relative;
              z-index: 0;
            "
            id="home-icon"
            alt="Home"
            onclick="document.getElementById('followerForm').submit();"
          />
          <div class="heading">Data Entry System</div>
          <p class="selected-message">Body Number : <%= enteredBodyNumber %></p>
        </div>
        <form id="btn" action="/logout" method="get">
          <div class="admin" id="user-mode-name"><%= username %></div>
          <button
            type="submit"
            style="
              background: linear-gradient(to right, #0f0c29, #302b63, #24243e);
            "
            class="button-logout bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded"
          >
            LOGOUT
          </button>
        </form>
      </div>
      <div id="title-name-content">
        <div>
          <div class="sub_container">
            <img
              src="./arrow.png"
              title="Back"
              id="go-back-icon"
              alt="Go Back"
              onclick="document.getElementById('followerForm').submit();"
            />
            <p id="title-name">Select Category :</p>
          </div>
        </div>
        <!-- Toggle Switch for online / offline -->
        <label
          for="toggle_switch"
          class="flex items-center cursor-pointer"
          style="flex-direction: column"
        >
          <div class="relative">
            <input
              type="checkbox"
              id="toggle_switch"
              class="sr-only mode"
              onclick="dynamicText()"
            />
            <div class="block bg-gray-300 w-14 h-8 rounded-full"></div>
            <div
              class="dot absolute left-1 top-1 mr-4 bg-white w-6 h-6 rounded-full transition"
            ></div>
          </div>
          <div
            id="mode_status"
            class="ml-32 -mt-2 text-gray-300 font-medium text-2xl"
          >
            Online
          </div>
        </label>
      </div>

      <div class="main-content">
        <% for(let i = 0 ; i < bodyNumberOptions.length ; i++){ %>
        <button
          onclick="transmit('<%= bodyNumberOptions[i]%>')"
          class="form-content"
          id="first-layer-button<%= i+1 %>"
        >
          <%= bodyNumberOptions[i]%>
        </button>
        <%}%>
      </div>
      <form action="/follower" method="get" id="followerForm"></form>
      <form action="/secondlayer" method="post" id="firstLayerForm">
        <input
          type="hidden"
          name="selectedCategory"
          id="selectedCategory"
          value=""
        />
        <input type="hidden" name="mode" id="mode" value="" />
      </form>
    </div>

    <script>
      modeDOM = document.getElementsByClassName('mode')[0];
      modeDOM.checked = true;
      function dynamicText() {
        if (!modeDOM.checked) {
          modeDOM.checked = false;
          document.getElementById('mode_status').innerHTML = 'Offline';
        } else {
          modeDOM.checked = true;
          document.getElementById('mode_status').innerHTML = 'Online';
        }
      }

      async function transmit(selectedGroup) {
        var mode = 'online';
        if (!modeDOM.checked) {
          mode = 'offline';
        }
        const firstLayerForm = document.getElementById('firstLayerForm');
        document.getElementById('selectedCategory').value = selectedGroup;
        document.getElementById('mode').value = mode;
        firstLayerForm.submit();
      }
    </script>
  </body>
</html>
